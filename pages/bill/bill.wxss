.bill_page{
    width: 100%;
    height: 100%;
    display: flex;
    /* justify-content: center; */
    flex-direction: column;
}
.bill_max{
    max-height: 98%;
    /* border: solid black 2px; */
    overflow-y: scroll;
}
.edit{
    width: 100%;
    font-size: 25rpx;
    text-align: right;
    margin-left: -20rpx;
    padding-top: 10rpx;
}
.circle_btn,.arrow_btn{
    padding: 20rpx 20rpx;
    width: 50%;
}
.bill_wrap{
    display: flex;
    justify-content: space-around;
    height: 100rpx;
    line-height: 50rpx;
    margin-top: 20rpx;
    width: 100%;
}
.bill_text{
    text-align: left;
    width: 100%;
}
.name_number{
    text-align: left;
}
.choose_icon{
    /* border: solid red 1px; */
    width: 10%;
}
.line_hr{
    margin: 20rpx auto;
    width:90%;
    height:2rpx;
    background:#aaa;
}
.bill_btn{
    position: absolute;
    bottom: 50rpx;
    background-color: rgb(0, 0, 0);
    color: white;
    font-size: 27rpx;
    padding: 30rpx 60rpx;
    border-radius: 6rpx;
}
.btn_wrap{
    width: 100%;
    display: flex;
    justify-content: center;
}